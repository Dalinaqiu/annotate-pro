// Prisma Schema for AnnotatePro
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户表
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  passwordHash  String?   // 邮箱密码登录时使用
  image         String?   // OAuth头像
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // 用户状态
  status        UserStatus @default(ACTIVE)
  
  // 2FA相关
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret  String?
  backupCodes       Json?
  
  // 关联
  accounts      Account[]
  sessions      Session[]
  apiKeys       ApiKey[]
  memberships   ProjectMember[]
  auditLogs     AuditLog[]
  comments      Comment[]
  
  @@index([email])
  @@map("users")
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  PENDING_VERIFICATION
}

// OAuth账户（NextAuth）
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

// Session管理（NextAuth + 自定义）
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // 扩展字段：设备信息
  userAgent    String?
  ipAddress    String?
  deviceName   String?
  isActive     Boolean  @default(true)
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([sessionToken])
  @@map("sessions")
}

// API Key管理
model ApiKey {
  id          String   @id @default(cuid())
  userId      String
  name        String   // API Key名称
  keyHash     String   @unique // 存储hash后的key
  prefix      String   // 显示用前缀（前8位）
  expiresAt   DateTime? // 过期时间
  lastUsedAt  DateTime? // 最后使用时间
  revokedAt   DateTime? // 撤销时间
  createdAt   DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([keyHash])
  @@map("api_keys")
}

// 验证Token（邮箱验证、Magic Link、密码重置等）
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
  @@map("verification_tokens")
}

// 角色定义
model Role {
  id          String   @id @default(cuid())
  name        String   @unique // SYSTEM_ADMIN, ORG_ADMIN, PROJECT_ADMIN, ANNOTATOR, REVIEWER, GUEST
  displayName String
  description String?
  permissions Json     // 权限配置（JSON格式存储权限列表）
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  memberships ProjectMember[]
  
  @@map("roles")
}

// 项目成员（用户-项目-角色关联表）
model ProjectMember {
  id        String   @id @default(cuid())
  userId    String
  projectId String   // 外键到projects表（后续创建）
  roleId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id])

  @@unique([userId, projectId])
  @@index([userId])
  @@index([projectId])
  @@map("project_members")
}

// 审计日志
model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String   // CREATE, UPDATE, DELETE, LOGIN, LOGOUT等
  resource  String   // User, Project, Task等
  resourceId String? // 资源ID
  details   Json?    // 详细信息（变更前后对比等）
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([resource, resourceId])
  @@index([createdAt])
  @@map("audit_logs")
}

// 评论系统（后续用于协作功能）
model Comment {
  id        String   @id @default(cuid())
  userId    String
  taskId    String?  // 关联任务
  content   String   @db.Text
  resolved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([taskId])
  @@map("comments")
}

// -------------------------
// 数据管理（2.4）相关模型
// -------------------------

// 项目（最小定义，供数据集关联）
model Project {
  id          String     @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  archivedAt  DateTime?

  datasets    Dataset[]
  members     ProjectMember[]

  @@map("projects")
}

// 数据集
model Dataset {
  id          String       @id @default(cuid())
  projectId   String
  name        String
  type        DatasetType
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  items       DataItem[]
  importJobs  ImportJob[]
  filters     SavedFilter[]
  reports     QualityReport[]

  @@index([projectId])
  @@unique([projectId, name])
  @@map("datasets")
}

// 数据项
model DataItem {
  id         String        @id @default(cuid())
  datasetId  String
  sourceUri  String        // 源地址：s3://, r2://, https://, file:// 等
  mimeType   String?
  checksum   String?       // 去重/完整性
  status     DataItemStatus @default(NEW)
  metadata   Json?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  dataset    Dataset       @relation(fields: [datasetId], references: [id], onDelete: Cascade)

  @@index([datasetId])
  @@index([status])
  @@index([checksum])
  @@map("data_items")
}

enum DatasetType {
  IMAGE
  TEXT
  AUDIO
  VIDEO
  MULTIMODAL
}

enum ImportType {
  LOCAL_UPLOAD
  CLOUD_SYNC
  URL_LIST
  PREANNOTATION
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

enum DataItemStatus {
  NEW
  IMPORTED
  PROCESSED
  FAILED
}

// 导入/同步任务
model ImportJob {
  id         String     @id @default(cuid())
  datasetId  String
  type       ImportType
  status     JobStatus  @default(PENDING)
  progress   Int        @default(0) // 0-100
  params     Json       // 任务参数：源、路径、映射等
  error      String?
  createdAt  DateTime   @default(now())
  startedAt  DateTime?
  finishedAt DateTime?

  dataset    Dataset    @relation(fields: [datasetId], references: [id], onDelete: Cascade)

  @@index([datasetId])
  @@index([status])
  @@map("import_jobs")
}

// 质量报告
model QualityReport {
  id        String   @id @default(cuid())
  datasetId String
  score     Float
  summary   Json     // 指标与检查结果明细
  createdAt DateTime @default(now())

  dataset   Dataset  @relation(fields: [datasetId], references: [id], onDelete: Cascade)

  @@index([datasetId])
  @@map("quality_reports")
}

// 已保存的筛选器
model SavedFilter {
  id        String   @id @default(cuid())
  datasetId String
  userId    String
  name      String
  query     Json     // 保存的查询条件
  createdAt DateTime @default(now())

  dataset   Dataset  @relation(fields: [datasetId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([datasetId, userId, name])
  @@index([datasetId])
  @@index([userId])
  @@map("saved_filters")
}

// -------------------------
// 任务管理（2.5）相关模型
// -------------------------

model Task {
  id            String      @id @default(cuid())
  projectId     String
  datasetId     String
  dataItemId    String
  title         String
  status        TaskStatus  @default(PENDING)
  priority      TaskPriority @default(MEDIUM)
  assignedToId  String?
  assignedAt    DateTime?
  dueAt         DateTime?
  metadata      Json?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  project       Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  dataset       Dataset     @relation(fields: [datasetId], references: [id], onDelete: Cascade)
  dataItem      DataItem    @relation(fields: [dataItemId], references: [id], onDelete: Cascade)
  assignee      User?       @relation(fields: [assignedToId], references: [id])
  events        TaskEvent[]
  comments      Comment[]

  @@index([projectId])
  @@index([datasetId])
  @@index([dataItemId])
  @@index([assignedToId])
  @@index([status])
  @@map("tasks")
}

model TaskEvent {
  id        String     @id @default(cuid())
  taskId    String
  type      String     // CREATED, STATUS_CHANGED, ASSIGNED, UNASSIGNED, RETRY, DELETED
  from      String?
  to        String?
  details   Json?
  actorId   String?
  createdAt DateTime   @default(now())

  task      Task       @relation(fields: [taskId], references: [id], onDelete: Cascade)
  actor     User?      @relation(fields: [actorId], references: [id])

  @@index([taskId])
  @@index([actorId])
  @@map("task_events")
}

enum TaskStatus {
  PENDING        // 待标注
  IN_PROGRESS    // 进行中
  DONE           // 已完成
  TO_REVIEW      // 待审核
  APPROVED       // 审核通过
  REJECTED       // 驳回
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

// -------------------------
// 标注结果（2.6）
// -------------------------

model Annotation {
  id        String    @id @default(cuid())
  taskId    String
  userId    String
  type      String    // image.boxes, image.polygons, text.ner, etc
  payload   Json      // 标注数据
  status    AnnotationStatus @default(DRAFT)
  version   Int       @default(1)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  task      Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
  @@index([status])
  @@map("annotations")
}

enum AnnotationStatus {
  DRAFT
  SAVED
  SUBMITTED
}
