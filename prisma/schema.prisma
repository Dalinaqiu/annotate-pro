// Prisma Schema for AnnotatePro
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Users
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  passwordHash  String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Status
  status        UserStatus @default(ACTIVE)

  // 2FA
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret  String?
  backupCodes      Json?

  // Relations
  accounts      Account[]
  sessions      Session[]
  apiKeys       ApiKey[]
  memberships   ProjectMember[]
  auditLogs     AuditLog[]
  comments      Comment[]
  savedFilters  SavedFilter[] @relation("SavedFilterOwner")
  assignedTasks Task[]        @relation("TaskAssignee")
  taskEvents    TaskEvent[]   @relation("TaskEventActor")
  annotations   Annotation[]  @relation("AnnotationAuthor")

  @@index([email])
  @@map("users")
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  PENDING_VERIFICATION
}

// OAuth Accounts (NextAuth)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

// Sessions (NextAuth + custom)
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Device info
  userAgent    String?
  ipAddress    String?
  deviceName   String?
  isActive     Boolean  @default(true)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([sessionToken])
  @@map("sessions")
}

// API Keys
model ApiKey {
  id          String   @id @default(cuid())
  userId      String
  name        String
  keyHash     String   @unique
  prefix      String
  expiresAt   DateTime?
  lastUsedAt  DateTime?
  revokedAt   DateTime?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([keyHash])
  @@map("api_keys")
}

// Verification Tokens (email/magic link/reset)
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Roles
model Role {
  id          String   @id @default(cuid())
  name        String   @unique // SYSTEM_ADMIN, ORG_ADMIN, PROJECT_ADMIN, ANNOTATOR, REVIEWER, GUEST
  displayName String
  description String?
  permissions Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  memberships ProjectMember[]

  @@map("roles")
}

// Project Members (project-role mapping)
model ProjectMember {
  id        String   @id @default(cuid())
  userId    String
  projectId String
  roleId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  role    Role    @relation(fields: [roleId], references: [id])
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@index([userId])
  @@index([projectId])
  @@map("project_members")
}

// Audit Logs
model AuditLog {
  id         String   @id @default(cuid())
  userId     String?
  action     String
  resource   String
  resourceId String?
  details    Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([resource, resourceId])
  @@index([createdAt])
  @@map("audit_logs")
}

// Comments (collaboration)
model Comment {
  id        String   @id @default(cuid())
  userId    String
  taskId    String?
  content   String   @db.Text
  resolved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  task Task? @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([taskId])
  @@map("comments")
}

// -------------------------
// Data Management (2.4)
// -------------------------

// Project (minimal)
model Project {
  id          String     @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  archivedAt  DateTime?

  datasets    Dataset[]
  members     ProjectMember[]
  tasks       Task[]

  @@map("projects")
}

// Dataset
model Dataset {
  id          String       @id @default(cuid())
  projectId   String
  name        String
  type        DatasetType
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  items       DataItem[]
  importJobs  ImportJob[]
  filters     SavedFilter[]
  reports     QualityReport[]
  tasks       Task[]

  @@index([projectId])
  @@unique([projectId, name])
  @@map("datasets")
}

// Data Item
model DataItem {
  id         String        @id @default(cuid())
  datasetId  String
  sourceUri  String
  mimeType   String?
  checksum   String?
  status     DataItemStatus @default(NEW)
  metadata   Json?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  dataset    Dataset       @relation(fields: [datasetId], references: [id], onDelete: Cascade)
  tasks      Task[]

  @@index([datasetId])
  @@index([status])
  @@index([checksum])
  @@map("data_items")
}

enum DatasetType {
  IMAGE
  TEXT
  AUDIO
  VIDEO
  MULTIMODAL
}

enum ImportType {
  LOCAL_UPLOAD
  CLOUD_SYNC
  URL_LIST
  PREANNOTATION
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

enum DataItemStatus {
  NEW
  IMPORTED
  PROCESSED
  FAILED
}

// Import/Sync Job
model ImportJob {
  id         String     @id @default(cuid())
  datasetId  String
  type       ImportType
  status     JobStatus  @default(PENDING)
  progress   Int        @default(0)
  params     Json
  error      String?
  createdAt  DateTime   @default(now())
  startedAt  DateTime?
  finishedAt DateTime?

  dataset    Dataset    @relation(fields: [datasetId], references: [id], onDelete: Cascade)

  @@index([datasetId])
  @@index([status])
  @@map("import_jobs")
}

// Quality Report
model QualityReport {
  id        String   @id @default(cuid())
  datasetId String
  score     Float
  summary   Json
  createdAt DateTime @default(now())

  dataset   Dataset  @relation(fields: [datasetId], references: [id], onDelete: Cascade)

  @@index([datasetId])
  @@map("quality_reports")
}

// Saved Filters
model SavedFilter {
  id        String   @id @default(cuid())
  datasetId String
  userId    String
  name      String
  query     Json
  createdAt DateTime @default(now())

  dataset   Dataset  @relation(fields: [datasetId], references: [id], onDelete: Cascade)
  user      User     @relation("SavedFilterOwner", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([datasetId, userId, name])
  @@index([datasetId])
  @@index([userId])
  @@map("saved_filters")
}

// -------------------------
// Task Management (2.5)
// -------------------------

model Task {
  id            String       @id @default(cuid())
  projectId     String
  datasetId     String
  dataItemId    String
  title         String
  status        TaskStatus   @default(PENDING)
  priority      TaskPriority @default(MEDIUM)
  assignedToId  String?
  assignedAt    DateTime?
  dueAt         DateTime?
  metadata      Json?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  project       Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  dataset       Dataset     @relation(fields: [datasetId], references: [id], onDelete: Cascade)
  dataItem      DataItem    @relation(fields: [dataItemId], references: [id], onDelete: Cascade)
  assignee      User?       @relation("TaskAssignee", fields: [assignedToId], references: [id])
  events        TaskEvent[]
  comments      Comment[]
  annotations   Annotation[]

  @@index([projectId])
  @@index([datasetId])
  @@index([dataItemId])
  @@index([assignedToId])
  @@index([status])
  @@map("tasks")
}

model TaskEvent {
  id        String     @id @default(cuid())
  taskId    String
  type      String
  from      String?
  to        String?
  details   Json?
  actorId   String?
  createdAt DateTime   @default(now())

  task      Task       @relation(fields: [taskId], references: [id], onDelete: Cascade)
  actor     User?      @relation("TaskEventActor", fields: [actorId], references: [id])

  @@index([taskId])
  @@index([actorId])
  @@map("task_events")
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
  TO_REVIEW
  APPROVED
  REJECTED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

// -------------------------
// Annotations (2.6)
// -------------------------

model Annotation {
  id        String    @id @default(cuid())
  taskId    String
  userId    String
  type      String
  payload   Json
  status    AnnotationStatus @default(DRAFT)
  version   Int       @default(1)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  task      Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user      User      @relation("AnnotationAuthor", fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
  @@index([status])
  @@map("annotations")
}

enum AnnotationStatus {
  DRAFT
  SAVED
  SUBMITTED
}

