// Prisma Schema for AnnotatePro
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户表
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  passwordHash  String?   // 邮箱密码登录时使用
  image         String?   // OAuth头像
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // 用户状态
  status        UserStatus @default(ACTIVE)
  
  // 2FA相关
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret  String?
  backupCodes       Json?
  
  // 关联
  accounts      Account[]
  sessions      Session[]
  apiKeys       ApiKey[]
  memberships   ProjectMember[]
  auditLogs     AuditLog[]
  comments      Comment[]
  
  @@index([email])
  @@map("users")
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  PENDING_VERIFICATION
}

// OAuth账户（NextAuth）
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

// Session管理（NextAuth + 自定义）
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // 扩展字段：设备信息
  userAgent    String?
  ipAddress    String?
  deviceName   String?
  isActive     Boolean  @default(true)
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([sessionToken])
  @@map("sessions")
}

// API Key管理
model ApiKey {
  id          String   @id @default(cuid())
  userId      String
  name        String   // API Key名称
  keyHash     String   @unique // 存储hash后的key
  prefix      String   // 显示用前缀（前8位）
  expiresAt   DateTime? // 过期时间
  lastUsedAt  DateTime? // 最后使用时间
  revokedAt   DateTime? // 撤销时间
  createdAt   DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([keyHash])
  @@map("api_keys")
}

// 验证Token（邮箱验证、Magic Link、密码重置等）
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
  @@map("verification_tokens")
}

// 角色定义
model Role {
  id          String   @id @default(cuid())
  name        String   @unique // SYSTEM_ADMIN, ORG_ADMIN, PROJECT_ADMIN, ANNOTATOR, REVIEWER, GUEST
  displayName String
  description String?
  permissions Json     // 权限配置（JSON格式存储权限列表）
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  memberships ProjectMember[]
  
  @@map("roles")
}

// 项目成员（用户-项目-角色关联表）
model ProjectMember {
  id        String   @id @default(cuid())
  userId    String
  projectId String   // 外键到projects表（后续创建）
  roleId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id])
  
  @@unique([userId, projectId])
  @@index([userId])
  @@index([projectId])
  @@map("project_members")
}

// 审计日志
model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String   // CREATE, UPDATE, DELETE, LOGIN, LOGOUT等
  resource  String   // User, Project, Task等
  resourceId String? // 资源ID
  details   Json?    // 详细信息（变更前后对比等）
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([resource, resourceId])
  @@index([createdAt])
  @@map("audit_logs")
}

// 评论系统（后续用于协作功能）
model Comment {
  id        String   @id @default(cuid())
  userId    String
  taskId    String?  // 关联任务
  content   String   @db.Text
  resolved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([taskId])
  @@map("comments")
}
